<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_recyclerview_wzprogress_query_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="@dimen/card_Corner_Radius"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="3dp">

        <TextView
            android:id="@+id/tv_no"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号：" />

        <TextView
            android:id="@+id/tv_no_item_recyclerview_wzprogress_query_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_no"
            android:layout_toRightOf="@+id/tv_no" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_no"
            android:text="工程名称：" />

        <TextView
            android:id="@+id/tv_name_item_recyclerview_wzprogress_query_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_name"
            android:layout_toRightOf="@+id/tv_name" />




        <TextView
            android:id="@+id/tv_sheji"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:text="设计方量(m³)：" />

        <TextView
            android:id="@+id/tv_sheji_item_recyclerview_wzprogress_query_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_sheji"
            android:layout_toRightOf="@+id/tv_sheji" />

        <TextView
            android:id="@+id/tv_shiji"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sheji"
            android:text="实际方量(m³)：" />

        <TextView
            android:id="@+id/tv_shiji_item_recyclerview_wzprogress_query_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_shiji"
            android:layout_toRightOf="@+id/tv_shiji" />

        <TextView
            android:id="@+id/tv_progress"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shiji"
            android:text="工程进度：" />

        <com.shtoone.shtw.ui.MyProgressBar
            android:id="@+id/pb_wzprogress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10000"
            android:layout_alignBottom="@+id/tv_progress"
            android:layout_toRightOf="@+id/tv_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:visibility="visible"
            />


        <TextView
            android:id="@+id/tv_projecttype"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_progress"
            android:text="工程类型：" />

        <TextView
            android:id="@+id/tv_projecttype_item_recyclerview_wzprojress_query_fragment"
            style="@style/RecyclerViewItemTextTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_projecttype"
            android:layout_toRightOf="@+id/tv_projecttype" />



    </RelativeLayout>


</android.support.v7.widget.CardView>